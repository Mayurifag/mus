services:
  backend:
    ports:
      - "8000:8000"
    volumes:
      - ../backend:/app
      - app_backend_venv:/opt/venv
      - /path/to/your/music:/app_data/music
      - app_data_database:/app_data/database
      - app_data_covers:/app_data/covers
    environment:
      - APP_ENV=development
      - FRONTEND_ORIGIN=http://localhost:5173
      - SECRET_KEY=dev_secret_key_please_change_in_production
      - DRAGONFLY_URL=redis://dragonfly:6379
    restart: unless-stopped

  frontend:
    ports:
      - "5173:5173"
    volumes:
      - ../frontend:/app
      - app_node_modules:/app/node_modules
    environment:
      - SECRET_KEY=dev_secret_key_please_change_in_production
      - VITE_INTERNAL_API_HOST=http://backend:8000
      - VITE_PUBLIC_API_HOST=http://localhost:8000
    restart: unless-stopped

  dragonfly:
    ports:
      - "6379:6379"

  arq-worker:
    volumes:
      - ../backend:/app
      - app_backend_venv:/opt/venv
      - /path/to/your/music:/app_data/music
      - app_data_database:/app_data/database
      - app_data_covers:/app_data/covers
    environment:
      - APP_ENV=development
      - DRAGONFLY_URL=redis://dragonfly:6379
      - BACKEND_URL=http://backend:8000
    command: sh -c "[ -f /app/requirements.txt ] && uv pip sync /app/requirements.txt; arq src.mus.infrastructure.jobs.worker.WorkerSettings"

volumes:
  app_node_modules:
  app_backend_venv:
  app_data_database:
  app_data_covers:
