{
  "python.analysis.extraPaths": [
    "./backend"
  ],
  "python.defaultInterpreterPath": "./backend/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.ruff": "always",
    "source.fixAll.eslint": "always"
  },
  "[json]": {
    "editor.wordWrap": "on"
  },
  "[jsonc]": {
    "editor.wordWrap": "on"
  },
  "[markdown]": {
    "editor.wordWrap": "on"
  },
  "workbench.editorAssociations": {
    "*.mdc": "default"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/*.so": true,
    "**/*.dylib": true,
    "**/*.dll": true,
    "**/*.exe": true,
    "**/*.egg": true,
    "**/*.egg-info": true,
    "**/dist": true,
    "**/build": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.venv": true,
    "**/node_modules": true,
    "**/.svelte-kit": true,
    "**/.overmind.sock": true
  },
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "terminal.integrated.profiles.linux": {
    "cursorFriendlyBash": {
      "path": "bash",
      "args": [
        "--noprofile",
        "--norc"
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "cursorFriendlyBash",
  "terminal.integrated.profiles.osx": {
    "cursorFriendlyBash": {
      "path": "bash",
      "args": [
        "--noprofile",
        "--norc"
      ]
    }
  },
  "terminal.integrated.defaultProfile.osx": "cursorFriendlyBash",
  "terminal.integrated.profiles.windows": {
    "cursorFriendlyBash": {
      "path": "bash",
      "args": [
        "--noprofile",
        "--norc"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "cursorFriendlyBash",
  "svelte.enable-ts-plugin": true
}
